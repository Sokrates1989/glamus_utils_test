{
    "name": "glamus/utils",
    "description": "Basic Utility Classes to use in various projects of glamus",
    "keywords": [
        "glamus",
        "StringUtils",
        "FileUtils",
        "Utils",
        "String",
        "File",
        "Utilitites"
    ],
    "homepage": "https://github.com/glamus/utils",
    "license": "MIT",
    "authors": [
        {
            "name": "Patrick Michiels",
            "email": "michiels@glamus.de",
            "homepage": "https://www.glamus.de/",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=7.4.0"
    },
    "autoload": {
        "psr-4": {
            "Glamus\\Utils\\": "src"
        }
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Glamus\\Utils\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
